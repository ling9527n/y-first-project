<body>
    <h1>👋 欢迎访问！</h1>
    <h2>您是第 <span id="count">0</span> 位访客</h2>
    
    <button class="btn" onclick="addCount()">点我+1</button>
    <button class="btn" onclick="resetCount()">重置</button>

    <p>这是一个用 GitHub 托管的简单网页计数器。</p>

    <script>
        // 这个函数在页面加载时运行，从本地存储中读取之前的计数
        function loadCount() {
            let savedCount = localStorage.getItem('pageCount');
            if (savedCount) {
                document.getElementById('count').textContent = savedCount;
            }
        }

        // 这个函数让计数+1
        function addCount() {
            let current = parseInt(document.getElementById('count').textContent);
            current++;
            document.getElementById('count').textContent = current;
            localStorage.setItem('pageCount', current); // 保存到浏览器
        }

        // 这个函数将计数重置为0
        function resetCount()
